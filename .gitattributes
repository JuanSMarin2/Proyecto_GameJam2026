# ===============================
# Macros
# ===============================
[attr]lfs        filter=lfs diff=lfs merge=lfs -text
[attr]unity-json eol=lf linguist-language=json
[attr]unity-yaml merge=unityyamlmerge eol=lf linguist-language=yaml

# ===============================
# Código (texto real)
# ===============================
*.cs             text diff=csharp eol=lf
*.cginc          text eol=lf
*.compute        text eol=lf
*.hlsl           text eol=lf
*.raytrace       text eol=lf
*.shader         text eol=lf

# ===============================
# Unity JSON
# ===============================
*.asmdef         unity-json
*.asmref         unity-json
*.inputactions   unity-json
*.shadergraph    unity-json
*.shadersubgraph unity-json

# ===============================
# Unity YAML
# ===============================
*.anim                  unity-yaml
*.asset                 unity-yaml
*.controller            unity-yaml
*.mat                   unity-yaml
*.meta                  unity-yaml
*.mixer                 unity-yaml
*.overrideController    unity-yaml
*.prefab                unity-yaml
*.preset                unity-yaml
*.unity                 unity-yaml
*.spriteatlas           unity-yaml

# ===============================
# Ignorar ruido en GitHub
# ===============================
Assets/Plugins/**               linguist-generated
Packages/packages-lock.json     linguist-generated

# ===============================
# Git LFS (solo lo pesado de verdad)
# ===============================

# 3D
*.fbx           lfs
*.blend         lfs
*.obj           lfs

# Video
*.mp4           lfs
*.mov           lfs

# PSD grandes
*.psd           lfs

# ===============================
# AUDIO (BINARIO PURO – CRÍTICO)
# ===============================
*.wav           binary -text
*.ogg           binary -text
*.mp3           binary -text
*.aiff          binary -text
*.flac          binary -text

# ===============================
# IMÁGENES (BINARIO PURO)
# ===============================
*.png           binary -text
